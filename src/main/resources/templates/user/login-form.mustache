{{> layout/header}}

<div class="p-5" style="display: flex; justify-content: center;">
    <div class="card" style="width: 500px">
        <div class="card-header"><b>로그인을 해주세요</b></div>
        <div class="card-body">
            <form action="/login" method="post" enctype="application/x-www-form-urlencoded">
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Enter username" name="username">
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" placeholder="Enter password" name="password">
                </div>
                <button type="submit" class="btn btn-primary form-control mb-3">로그인</button>
            </form>
            <div style="display: flex; justify-content: center;">
                <a href="">
                    <img class="btn" style="width: 200px; height: 60px; margin-right: 15px;" src="/images/kakao.png">
                </a>
                <a href="">
                    <img class="btn" style="width: 180px; height: 60px;" src="/images/naver.png">
                </a>
            </div>
        </div>
    </div>
</div>


