{{> layout/header}}


<div class="p-5" style="display: flex; justify-content: center; align-items: center;">
    <div class="card" style="width: 300px; height: 380px;">
        <div class="card-header text-center"><b>로그인을 해주세요</b></div>
        <div class="card-body">
            <form action="/login" method="post" enctype="application/x-www-form-urlencoded">
                <div class="mb-3" style="margin-top: auto; margin-bottom: 10px;">
                    <label for="username" style="font-weight: bold;">이메일</label>
                    <input type="text" id="email" class="form-control" placeholder="아이디를 입력하세요" name="email">
                </div>
                <div class="mb-3">
                    <label for="password" style="font-weight: bold;">비밀번호</label>
                    <input type="password" id="password" class="form-control" placeholder="비밀번호를 입력하세요" name="password">
                </div>
                <button type="submit" class="btn btn-primary" style="width: 240px; margin-left: 13px; margin-bottom: 3px">로그인</button>
            </form>
            <div>
                <a href="https://kauth.kakao.com/oauth/authorize?redirect_uri=http://localhost:8080/oauth/kakao/callback&response_type=code&client_id=3dabd7341dbc207eccd11bf9aa87da0a">
                    <img class="btn" style="width: 100%; height: 52px;" src="/images/kakao.png">
                </a>
                <a href="https://nid.naver.com/oauth2.0/authorize?response_type=code&client_id=0KevVKtUZxg7qlbo5ibH&redirect_uri=http://localhost:8080/oauth/naver/callback&state=1234">
                    <img class="btn" style="width: 100%; height: 52px;" src="/images/naver.png">
                </a>
            </div>
        </div>
    </div>
</div>


{{> layout/footer}}